<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/big_margin</item>
        <item name="android:paddingEnd">@dimen/fab_margin</item>
        <item name="android:paddingStart">@dimen/fab_margin</item>
        <item name="android:textSize">@dimen/font_size</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>


    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonMarginLess" parent="Button">
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginEnd">0dp</item>

    </style>

    <style name="ButtonDark" parent="Button">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
    </style>

    <style name="ButtonLight" parent="ButtonDark">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="headline_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="layout_constraintVertical_bias">0.3</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="shoe_model" parent="headline_text">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">@dimen/fab_margin</item>
    </style>

    <style name="shoe_details" parent="shoe_model">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="android:layout_marginTop">@dimen/big_margin</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="editTextStyleNumber" parent="editTextStyle">
        <item name="android:inputType">numberDecimal</item>
    </style>
</resources>